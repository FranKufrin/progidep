CREATE TABLE IF NOT EXISTS Ad (adID INT NOT NULL, catAd INT NOT NULL CHECK ((catAd IN ('u potrazi', 'sretno pronaðen', 'nije pronaðen', 'pronaðen uz nesretne okolnosti', 'u skloništu'))), userID INT NOT NULL, PRIMARY KEY (adID), FOREIGN KEY (userID) REFERENCES User (userID));

